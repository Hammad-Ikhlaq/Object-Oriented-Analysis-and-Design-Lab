abstract public class Player {
    String name;
    int matchesPlayed;
    int runsScored;
    Player(){
        name=null;
        runsScored=matchesPlayed=0;
    }
    Player(String name,int matchesPlayed,int runsScored){
        this.name=name;
        this.matchesPlayed=matchesPlayed;
        this.runsScored=runsScored;
    }
    String print(){
        return("Name: "+name+"\nMatches Played: "
                +matchesPlayed+"\nRuns Scored: "+runsScored);
    }
    abstract String catagory();
}
